{% extends "base.html.twig" %}

{% block css %}
    <link href="{{ base_url() }}/CSS/connection.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="w-75 m-auto pt-3">

        {% if message.valide %}
            <div class="alert alert-success">
                {{ message.valide }}
            </div>
        {% endif %}

        {% if message.echec %}
            <div class="alert alert-danger">
                {{ message.echec }}
            </div>
        {% endif %}

        <div class="container" id="sign_in_form">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Se connecter</h5>
                            <form action="{{ path_for('sign_in') }}" method="post" class="form-signin">
                                <div class="form-label-group">
                                    <input type="email" id="sign_in_email" class="form-control" name="email"
                                           placeholder="Email" required autofocus>
                                    <label for="sign_in_email">Email</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="password" id="sign_in_password" class="form-control" name="password"
                                           placeholder="Mot de passe" required>
                                    <label for="sign_in_password">Mot de passe</label>
                                </div>

                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Se
                                    connecter
                                </button>
                                <hr class="my-4">
                                <button class="btn btn-lg btn-secondary btn-block text-uppercase" id="btn_sign_up">
                                    S'inscrire
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container d-none" id="sign_up_form">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">S'inscrire</h5>
                            <form action="{{ path_for('sign_up') }}" method="post">
                                <div class="form-label-group">
                                    <input type="email" id="sign_up_email" class="form-control" name="email"
                                           placeholder="Email" required autofocus>
                                    <label for="sign_up_email">Email</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="password" id="sign_up_password" class="form-control" name="password"
                                           placeholder="Mot de passe" required>
                                    <label for="sign_up_password">Mot de passe</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="password" id="sign_up_password_verify" class="form-control"
                                           name="password_verify" placeholder="Valider mot de passe" required>
                                    <label for="sign_up_password_verify">Valider mot de passe</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="text" id="sign_up_name" class="form-control" name="name"
                                           placeholder="Nom" required autofocus>
                                    <label for="sign_up_name">Nom</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="text" id="sign_up_surname" class="form-control" name="surname"
                                           placeholder="Prénom" required>
                                    <label for="sign_up_surname">Prénom</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="tel" id="sign_up_tel" class="form-control" name="tel"
                                           placeholder="Numéro de téléphone" required>
                                    <label for="sign_up_tel">Numéro de téléphone</label>
                                </div>

                                <input type="submit" class="btn btn-primary" value="Valider">
                                <input type="submit" id="cancel_sign_up" class="btn btn-danger" value="Annuler">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="btn_container">
        <a href="{{ path_for("home") }}" class="btn_back btn-2">Revenir sur le site</a>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ base_url() }}/JS/connection.js"></script>
{% endblock %}