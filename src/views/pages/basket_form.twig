{% extends "pages/layout.twig" %}

{% block content %}
    <h1 class="text-center">
        Editer le panier de la semaine {{ week_number }} ({{ year }})
    </h1>
    <div>
        Nombre d'habonnés qui auront ce panier : 20
    </div>
    <hr>

    <div class="mb-2 mt-2">
        Composition du panier
    </div>
    <div id="products" class="card-deck">
        {% for product in products %}
            <div class="mr-auto ml-auto mb-3 col-2">
                <div class="product-card m-auto w-100">
                    <div class="font-weight-bold">
                        {{ product.nomproduit }}
                    </div>
                    {{ product.valeur }} {{ product.unite }}
                    <a href="{{ path_for("remove_product_from_basket", {id: basket.id_panier, id_product: product.id_produit}) }}" class="btn-icon-corner">
                        <img class="btn-img-corner" src="{{ base_url() }}/images/remove.png" alt="trash">
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if products is empty %}
        <div class="font-weight-bold">
            Aucun produit pour le moment
        </div>
    {% endif %}
    <hr>
    <div class="mb-3">
        <form class="form-inline" action="{{ path_for("add_product_to_basket", {id: basket.id_panier}) }}" method="post">
            <div class="form-group mb-2">
                <label for="basket-product" class="mr-2">Porduit</label>
                <select class="form-control" name="basket-product" id="basket-product">
                    {% for product in all_products %}
                        <option value="{{ product.id_produit }}">{{ product.nomproduit }} ({{ product.valeur }} {{ product.unite }} en stock )</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="basket-product-qte" class="mr-2">Quantitée</label>
                <input type="number" class="form-control" name="basket-product-qte" id="basket-product-qte" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Ajouter produit</button>
        </form>
    </div>
    <div class="">
        <form action="{{ path_for("clear_basket", {id: basket.id_panier}) }}" method="post">
            <button type="submit" class="btn btn-danger mb-2">Vider le panier</button>
        </form>
    </div>
{% endblock %}